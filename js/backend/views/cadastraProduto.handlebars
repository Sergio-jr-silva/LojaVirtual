<div id="conteudo">
        <header>
            <h1>Cadastrar Produtos</h1>
        </header>
        <div id="forms">
            <form action="/vendedor/cadastroproduto" method="post" id="form">
                <div class="inputNome">
                    <input type="text" name="nome" placeholder="Nome do Produto" required>
                </div>
                <div class="inputTamanho">
                    <input type="number" name="tamanho" placeholder="Tamanho" required>
                </div>
                <div class="inputCor">
                    <input type="text" name="cor" placeholder="Cor" required>
                </div>
                
                <div class="inputPreco">
                    <input type="number" name="preco" placeholder="PreÃ§o do Produto" step="000.01" required>
                </div>

                <div class="inputLoja">
                    <select name="nome_loja" id="">
                        <option value="">Selecione a loja</option>
                       {{#each loja}}
                      <option value="{{nome}}" name="nome_loja">{{nome}}</option>
                       {{/each}}
                    </select>
                    <a href="/vendedor/criarloja">Cadastrar Loja</a>
                </div>

                <div class="inputMarca">
                 <select name="marca" id="">
                        <option value="">Fornecedor</option>
                       {{#each fornecedor}}
                      <option value="{{nome}}" name="marca">{{nome}}</option>
                       {{/each}}
                    </select>
                
                
                <a href="/vendedor/fornecedor">Cadastrar Fornecedor</a>
              </div>
               <a href="/vendendor/loja"> <button type="submit" id="button">Cadastrar</button></a>
            </form>
        </div>
    </div>